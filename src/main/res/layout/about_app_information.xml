<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/about_app_layout"
        android:paddingLeft="10.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:background="@drawable/cell_normal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*">
            <TableRow
                android:layout_marginTop="3.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingBottom="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name" />
            </TableRow>
            <TableRow
                android:layout_marginTop="3.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:id="@id/about_app_Version"
                    android:paddingLeft="12.0dip"
                    android:paddingTop="0.0dip"
                    android:paddingBottom="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:layout_marginTop="3.0dip">
                <TextView
                    android:textSize="13.0sp"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12.0dip"
                    android:paddingTop="16.0dip"
                    android:paddingBottom="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iParadoxCopyright" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="10.0dip"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*">
            <TableRow
                android:id="@id/about_app_FeedBackLink"
                android:background="@drawable/cell"
                android:clickable="true"
                android:layout_marginTop="3.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingBottom="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Feedback" />
                <TextView
                    android:textSize="13.0sp"
                    android:textColor="@android:color/black"
                    android:id="@id/about_conn_IPAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedBackLink" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>