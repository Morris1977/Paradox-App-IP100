<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/about_connection_layout"
        android:background="@android:color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@id/about_connection_layout_StaticIP"
            android:background="@android:color/white"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="2">
            <TableRow
                android:layout_marginTop="3.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="#ff808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:text="@string/StaticIP" />
            </TableRow>
            <TableRow
                android:background="@drawable/cell_normal"
                android:layout_height="90.0dip"
                android:layout_marginTop="1.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingBottom="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/IPAddress" />
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="@android:color/black"
                    android:id="@id/about_conn_IPAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:background="@drawable/cell_normal"
                android:layout_height="90.0dip"
                android:layout_marginTop="1.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingBottom="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/IPPortCOLON" />
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="@android:color/black"
                    android:id="@id/about_conn_IPPort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:background="@drawable/cell_normal"
                android:layout_height="fill_parent"
                android:layout_marginTop="1.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingBottom="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LabelCOLON" />
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="@android:color/black"
                    android:id="@id/about_conn_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@id/about_connection_layout_DNS"
            android:background="@android:color/white"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*">
            <TableRow
                android:layout_marginTop="3.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="#ff808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:text="@string/DNS" />
            </TableRow>
            <TableRow
                android:background="@drawable/cell_normal"
                android:layout_height="90.0dip"
                android:layout_marginTop="1.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingBottom="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SiteIDCOLON" />
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="@android:color/black"
                    android:id="@id/about_conn_SiteID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>